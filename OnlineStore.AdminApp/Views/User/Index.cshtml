@using OnlineStore.ViewModels.Base;
@using OnlineStore.ViewModels.System;
@model PagedViewModel<UserViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>User List</h1>

<p>
    <form asp-action="Create" method="get">
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</p>
<div>
    <form asp-action="index" method="get">
        <input name="keyword" value=@ViewBag.Keyword type="text" class="form-control"/>
        <button type="submit" class="btn btn-primary">Search</button>
        <button type="submit" class="btn btn-primary" onclick="window.local.href='/user/index'">Reset</button>
    </form>
</div>
<div>
    @if(ViewBag.SuccessMessage != null)
    {
        <div id="msgAlert" class="alert alert-success" role="alert">@ViewBag.SuccessMessage</div>
    }
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Phone Number
            </th>
            <th>
                User Name
            </th>
            <th>
                Email
            </th>
            <th>
                Id
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.items) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", "User", new {id = item.Id}) |
                    @Html.ActionLink("Details", "Details", "User", new {  id=item.Id}) |
                    @Html.ActionLink("Delete", "Delete", "User", new {  id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
